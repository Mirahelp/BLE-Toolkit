<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="using:MirahelpBLEToolkit"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="MirahelpBLEToolkit.ServicesWidget">
	<Grid x:Name="RootHost" Background="Transparent">
		<Grid RowDefinitions="Auto,Auto,*" Margin="8">
			<StackPanel Orientation="Horizontal" Spacing="8">
				<Button x:Name="BtnRefresh"/>
			</StackPanel>
			<TextBlock Grid.Row="1" x:Name="TxtStatus" Margin="0,8,0,8"/>
			<ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
				<StackPanel x:Name="ItemsPanel" Spacing="8" HorizontalAlignment="Stretch"/>
			</ScrollViewer>
		</Grid>
		<Grid x:Name="LoadingOverlay" IsVisible="False" Background="#00000000">
			<local:MetroLoadingAnimation HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Grid>
	</Grid>
</UserControl>
